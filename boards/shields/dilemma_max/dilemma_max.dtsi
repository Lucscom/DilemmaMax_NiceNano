// Dilemma Max - Custom PCB for nice!nano v2
// 5 rows x 6 columns per side, row2col diodes
// Encoder on thumb row (row 4, col 3)

#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/led/led.h>
#include <dt-bindings/pinctrl/nrf-pinctrl.h>

#include "dilemma_max-layouts.dtsi"

/ {
    chosen {
        zmk,physical-layout = &default_layout;
        zmk,underglow = &led_strip;
    };

    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "row2col";
        wakeup-source;

        row-gpios
            = <&gpio0 31 GPIO_ACTIVE_HIGH>   // row 1 = thumb     | Matrix row 0
            , <&gpio0 29 GPIO_ACTIVE_HIGH>   // row 2 = botton main | Matrix row 1
            , <&gpio0 2 GPIO_ACTIVE_HIGH>    // row 3             | Matrix row 2
            , <&gpio1 15 GPIO_ACTIVE_HIGH>   // row 4             | Matrix row 3
            , <&gpio1 13 GPIO_ACTIVE_HIGH>   // row 5 = top       | Matrix row 4
            ;

        col-gpios
            = <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // col 1 = leftmost  - P1.07 middle pad
            , <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // col 2             - P1.02 middle pad
            , <&gpio0 9  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // col 3             - P1.01 middle pad
            , <&gpio1 1  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // col 4
            , <&gpio1 2  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // col 5
            , <&gpio1 7  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // col 6 = rightmost
            ;
    };

    default_transform: default_transform {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;

        // Left side: cols 0-5, Right side: cols 6-11
        // Row 0 = top, Row 1-2 = middle, Row 3 = bottom main, Row 4 = thumb cluster
        map = <
            RC(4,5) RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4)    RC(4,10) RC(4,9) RC(4,8) RC(4,7) RC(4,6) RC(4,11)  // top
            RC(1,5) RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)    RC(1,10) RC(1,9) RC(1,8) RC(1,7) RC(1,6) RC(1,11)
            RC(2,5) RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)    RC(2,10) RC(2,9) RC(2,8) RC(2,7) RC(2,6) RC(2,11)
            RC(3,5) RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)    RC(3,10) RC(3,9) RC(3,8) RC(3,7) RC(3,6) RC(3,11)  // bottom main
                            RC(0,2) RC(0,0) RC(0,1) RC(0,3)    RC(0,9) RC(0,7) RC(0,6) RC(0,8)                             // thumb
        >;
    };

    left_encoder: left_encoder {
        compatible = "alps,ec11";
        a-gpios = <&gpio1 00 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <80>;
        status = "disabled";
    };

    right_encoder: right_encoder {
        compatible = "alps,ec11";
        a-gpios = <&gpio1 00 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <80>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <20>;
    };
};

// WS2812/SK6805 LED-Strip via SPIM3 (MOSI = P1.04)
&pinctrl {
    spi3_default: spi3_default {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 1, 4)>;
        };
    };
    spi3_sleep: spi3_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 1, 4)>;
            low-power-enable;
        };
    };
};

&spi3 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    pinctrl-0 = <&spi3_default>;
    pinctrl-1 = <&spi3_sleep>;
    pinctrl-names = "default", "sleep";

    led_strip: ws2812@0 {
        compatible = "worldsemi,ws2812-spi";
        reg = <0>;
        spi-max-frequency = <4000000>;
        chain-length = <51>;
        spi-one-frame = <0x70>;
        spi-zero-frame = <0x40>;
        color-mapping = <LED_COLOR_ID_GREEN LED_COLOR_ID_RED LED_COLOR_ID_BLUE>;
    };
};

